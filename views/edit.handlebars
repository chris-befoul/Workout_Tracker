<form action='/' method="post">
    <fieldset>
        {{#each results}}
            <legend>Edit Entry</legend>
            <br>
            <label>Name of Exercise:
                <input type="text" name="name" size="30" value="{{this.name}}">
            </label>
            <br>
            <br>
            <label>Repetitions Performed:
                <input type="number" name="reps" size="30" value="{{this.reps}}">
            </label>
            <br>
            <br>
            <label>Weight Used:
                <input type="number" name="weight" size="30" value="{{this.weight}}">
            </label>
            <br>
            <br>
            <label>Date Complete (Month-Day-Year):
                <input type="date" name="date" size="30" value="{{this.date}}">
            </label>
            <br>
            <br>
            <label>Unit:
                <br>
                <select name="lbs">
                    <option selected="{{this.lbs}}" value="0">kg</option>
                    <option selected="{{this.lbs}}" value="1">lbs</option>
                </select>
                <br>
                <br>
            </label>
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="submit" name="Update" value="Update"/>
        {{/each}}
    </fieldset>
</form>